/**app.wxss**/

@import "styles/weui.wxss";
@import "styles/shops-list.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
}

view {
  box-sizing: border-box;
}

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}


.weui-search-bar__box {
  padding: 0 70rpx;
}
.weui-search-bar__form {
  border-radius: 50rpx;
  height: 80rpx;
}
.weui-search-bar__input {
  font-size: 32rpx;
  color: #b4b4b4;
  height: 80rpx;
  line-height: 80rpx;
}

.weui-icon-search_in-box {
  left: 30rpx;
  top: 26rpx;
}
.weui-search-bar__box .weui-icon-clear{
  right: 10rpx;
  top: 12rpx;
}

button[size="mini"] {
  display:inline-block;
  line-height:2.3;
  font-size:16px;
  padding:0 1.34em;
}
